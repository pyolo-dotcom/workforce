<section class="jobs" id="jobs">
    <h3>Let's Get Right To What You Care About, <span>Our Million Dollar Results.</span></h3>
    <div class="job-cards">
        <% if (jobs && jobs.length > 0) { %>
            <% jobs.forEach((job) => { %>
                <div class="card">
                    <img src="<%= job.image %>" alt="<%= job.title %>">
                    <h4><%= job.title %></h4>
                    <p><%= job.location %></p>
                    <a href="/login" class="btn">Apply Now</a>
                    <!-- View button to open the modal -->
                    <button class="btn view-btn" data-job-description="<%= job.description %>">View</button>
                </div>
            <% }) %>
        <% } else { %>
            <p>No jobs available at the moment.</p>
        <% } %>
    </div>      

    <!-- Modal structure -->
    <div class="modal" id="jobModal" style="display:none;">
        <div class="modal-content">
            <span class="close-button">&times;</span>
            <h2>Job Description </h2>
            <div id="modal-body">
                <!-- Job details will be dynamically populated here -->
            </div>
        </div>
    </div>
</section>

<script>
    // JavaScript to handle the modal functionality
    document.addEventListener('DOMContentLoaded', function() {
        const viewButtons = document.querySelectorAll('.view-btn');
        const modal = document.getElementById('jobModal');
        const closeButton = document.querySelector('.close-button');
    
        viewButtons.forEach(button => {
            button.addEventListener('click', function() {
                const jobDescription = this.getAttribute('data-job-description');
                // Populate the modal with the job description
                document.getElementById('modal-body').innerHTML = `<p>${jobDescription}</p>`;
                modal.style.display = 'block';
            });
        });
    
        closeButton.addEventListener('click', function() {
            modal.style.display = 'none';
        });
    
        window.addEventListener('click', function(event) {
            if (event.target === modal) {
                modal.style.display = 'none';
            }
        });
    });
    </script>



