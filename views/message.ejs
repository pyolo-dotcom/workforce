<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <title>Message Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Poppins', sans-serif;
            display: flex;
            height: 100vh;
            background-color: #f5f5f5;
        }
        .sidebar {
            width: 20%;
            background-color: #253947;
            color: white;
            padding: 20px;
        }
        .logo-container {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }
        .logo {
            width: 50px;
            height: 50px;
            margin-right: 10px;
        }
        .logo img {
            width: 100%;
            height: auto;
            border-radius: 50%;
        }
        .sidebar h2 {
            font-size: 18px;
            margin: 0;
        }
        .sidebar ul {
            list-style-type: none;
        }
        .sidebar ul li {
            padding: 10px 0;
            font-size: 18px;
        }
        .sidebar ul li a {
            color: white;
            text-decoration: none;
            display: block;
            padding: 10px;
            border-radius: 5px;
        }
        .sidebar ul li a:hover {
            background-color: #3e5062;
        }
        .content {
            background-color: white;
            width: 80%;
            padding: 20px;
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            grid-gap: 20px;
        }
        .card {
            background-color: #e0e0e0;
            height: 300px;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        .card h3 {
            margin-bottom: 10px;
            font-size: 24px;
        }
        .card p {
            margin-bottom: 10px;
            font-size: 16px;
        }
        .actions {
            display: flex;
            justify-content: space-between;
        }
        .btn-accept, .btn-decline {
            padding: 10px 20px;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 5px;
        }
        .btn-accept {
            background-color: green;
        }
        .btn-decline {
            background-color: red;
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <div class="logo-container">
            <div class="logo">
                <img src="images/logo.png" alt="Logo">
            </div>
            <h2>Workforce Alliance Inc.</h2>
        </div>
        <ul>
            <li><a href="/admindashboard">Dashboard</a></li>
            <li><a href="/jobs">Jobs</a></li>
            <li><a href="/appointment">Appointment</a></li>
            <li><a href="/message">Message</a></li>
            <li><a href="/history">History</a></li>
        </ul>
    </div>

    <div class="content">
        <!-- Dynamic content will be inserted here -->
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', async () => {
            try {
                const response = await fetch('/api/messages'); // Fetch messages from the API
                const messages = await response.json(); // Parse JSON response
    
                const contentDiv = document.querySelector('.content'); // Select the content div
                contentDiv.innerHTML = ''; // Clear existing content
    
                // Loop through each message and create card elements
                messages.forEach(message => {
                    const card = document.createElement('div');
                    card.className = 'card';
                    card.innerHTML = `
                        <h3>${message.name}</h3>
                        <p>${message.email}</p>
                        <p>Subject: ${message.subject}</p>
                        <p>Message: ${message.message}</p>
                        <div class="actions">
                            <button class="btn-decline" onclick="updateMessage('${message.id}', 'decline')">Decline</button>
                            <button class="btn-accept" onclick="updateMessage('${message.id}', 'accept')">Accept</button>
                        </div>
                    `;
                    contentDiv.appendChild(card); // Append the card to the content div
                });
            } catch (error) {
                console.error('Error fetching messages:', error);
            }
        });
    
        async function updateMessage(messageId, action) {
            try {
                const response = await fetch(`/api/messages/${messageId}`, {
                    method: 'PATCH', // Use PATCH to update
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ action }) // Send the action (accept/decline)
                });
    
                if (response.ok) {
                    // Optionally, you can refresh the message cards or give feedback to the user
                    location.reload(); // Reload to see updated statuses
                } else {
                    console.error('Failed to update message:', response.statusText);
                }
            } catch (error) {
                console.error('Error updating message:', error);
            }
        }
    </script>
    
</body>
</html>
