<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <title>Appointment Page</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Poppins', sans-serif;
            display: flex;
            height: 100vh;
            background-color: #f5f5f5;
        }
        .sidebar {
            width: 20%;
            background-color: #253947;
            color: white;
            padding: 20px;
        }
        .logo-container {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }
        .logo {
            width: 50px;
            height: 50px;
            margin-right: 10px;
        }
        .logo img {
            width: 100%;
            height: auto;
            border-radius: 50%;
        }
        .sidebar h2 {
            font-size: 18px;
            margin: 0;
        }
        .sidebar ul {
            list-style-type: none;
        }
        .sidebar ul li {
            padding: 10px 0;
            font-size: 18px;
        }
        .sidebar ul li a {
            color: white;
            text-decoration: none;
            display: block;
            padding: 10px;
            border-radius: 5px;
        }
        .sidebar ul li a:hover {
            background-color: #3e5062;
        }
        .content {
            background-color: white;
            width: 80%;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        h3 {
            margin-bottom: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            font-size: 16px;
        }
        table th, table td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }
        table th {
            background-color: #3e5062;
            color: white;
        }
        .no-appointment {
            padding: 20px;
            font-size: 16px;
            color: #555;
            text-align: center;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <div class="logo-container">
            <div class="logo">
                <img src="images/logo.png" alt="Logo">
            </div>
            <h2>Workforce Alliance Inc.</h2>
        </div>
        <ul>
            <li><a href="/admindashboard">Dashboard</a></li>
            <li><a href="/jobs">Jobs</a></li>
            <li><a href="/appointment">Appointment</a></li>
            <li><a href="/message">Message</a></li>
            <li><a href="/history">History</a></li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="content">
        <div class="table-container">
            <h3>Appointments</h3>
            <table>
                <thead>
                    <tr>
                        <th>Job</th>
                        <th>Name</th>
                        <th>Number</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (appointments.length > 0) { %>
                        <% appointments.forEach(appointment => { %>
                            <tr>
                                <td><%= appointment.job %></td>
                                <td><%= appointment.firstName %> <%= appointment.middleName %> <%= appointment.lastName %></td>
                                <td><%= appointment.mobilePhone %></td>
                                <td><%= new Date(appointment.dob).toLocaleDateString() %></td>
                                <td><%= appointment.time %></td> <!-- You can add a time field if applicable -->
                                <td><%= appointment.maritalStatus %></td>
                                <td><a href="<%= appointment.resume %>" target="_blank">View Resume</a></td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="8" class="no-appointment">No appointment found</td>
                        </tr>
                    <% } %>
                </tbody>
                
            </table>
        </div>
    </div>

</body>
</html>
